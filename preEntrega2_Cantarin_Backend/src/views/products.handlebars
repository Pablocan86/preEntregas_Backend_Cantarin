<div>
    {{#if isValid}}
    <section class="sectionProducts">
    <h2>PRODUCTOS</h2>
<div class="productsContainer">

    {{#each docs}}
        <div class="cardProduct">
          <p>{{this.title}}</p>
          <img class="productImage" src="{{this.thumbnail}}" alt="" />
          <p>$ {{this.price}}</p>
          <button class="addButton" data-id="{{this._id}}">Agregar </button>
        </div>
      {{/each}}
</div>
<br />
<div>
    {{#if hasPrevPage}}
    <a href={{this.prevLink}}>
        << Anterior</a>
            {{/if}}
            &nbsp;
            {{this.page}}
            &nbsp;
            {{#if hasNextPage}}
            <a href={{this.nextLink}}>Siguiente >></a>
            {{/if}}
</div>
{{else}}
<h1>No hay productos</h1>
{{/if}}
<a href="./productsManager">Administrar productos</a>
</div>